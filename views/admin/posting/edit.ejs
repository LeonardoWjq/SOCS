<%- layout('layouts/template')  %>
<h1 class="text-center mt-3">This is editing postings</h1>
<div class="container py-3">
    <div class="row d-flex justify-content-center">
        <div class="col-8">
            <form action="/admin/posting/<%=posting._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="position">Position:</label>
                    <input type="text" name="position" id="position" value="<%=posting.position%>"  class="form-control"required>
                </div>
                <div class="form-group">
                    <label for="startDate">Start Date:</label>
                    <input type="date" name="startDate" id="startDate" value="<%=posting.startDate%>" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="endDate">End Date:</label>
                    <input type="date" name="endDate" id="endDate" value="<%=posting.endDate%>" class="form-control">
                </div>
                <div class="form-group">
                    <label for="type">Type of Posting:</label>
                    <select name="type" id="type" class="form-control">
                        <option value="Faculty" <%-posting.type=="Faculty" ? "selected":"" %>>Faculty</option>
                        <option value="Course Lecturer" <%-posting.type=="Course Lecturer" ? "selected": ""%>>Course
                            Lecturer</option>
                        <option value="Research" <%-posting.type=="Research" ? "selected": ""%>>Research</option>
                        <option value="Student" <%-posting.type=="Student" ? "selected": ""%>>Student</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="logistics">Logistics:</label>
                    <textarea name="logistics" id="logistics" cols="60" rows="20"
                        placeholder="Input HTML Markup or Plain Text (Optional)"class="form-control" ><%=posting.logistics%> </textarea>
                </div>
                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea name="description" id="description" cols="60" rows="25"
                        placeholder="Input HTML Markup or Plain Text (Optional)"class="form-control" ><%=posting.description%></textarea>
                </div>
                <button class="btn btn-primary">Update</button>
                <a href="/admin/posting/manage" class="btn btn-danger ml-3" >Cancel</a>
            </form>
        </div>
    </div>
</div>