<%- layout('layouts/template') %>
<div class="container-fluid">

    <div class="row text-center">
        <div class="col-12">
            <h1 class="mt-3">Manage News</h1>
        </div>
    </div>

    <div class="row">
        <!--leave the first column blank-->
        <div class="col-lg-1"></div>
        <div class="col-lg-2">
            <!--SIDEBAR-->
            <%- include('../../partials/sidebarAdmin')%>
            <!-- log out button -->
            <form action="/logout" method="POST" class="my-2">
                <button class="btn btn-primary">Sign Out</button>
            </form>
        </div>


        <div class="col-lg-8" id="text-back">
            <!-- SEARCH BAR -->
            <%- include('../../partials/search') %>


            <div>
                <ul class="list-group">
                    <li class="list-group-item">
                        <a href="/admin/news/add" class="btn btn-warning">Add News</a>
                    </li>

                    <% for (aNews of news){ %>
                    <li class="list-group-item">
                        <div>
                            <a href="/admin/news/<%= aNews._id %>" class="h2"><%= aNews.title %></a>
                        </div>

                        <div>
                            <%= aNews.date %><span>&emsp;</span><%= aNews.time %>
                        </div>

                        <div>
                            <span class="badge badge-secondary"><%= aNews.type %></span>
                        </div>
                        <div>
                            <%- aNews.logistics %>
                        </div>
                        <div class="my-2">
                            <form action="/admin/news/<%= aNews._id%>/edit" class="d-inline" method="GET">
                                <button class="btn btn-primary">Edit</button>
                            </form>
                            <form action="/admin/news/<%= aNews._id%>?_method=DELETE" class="d-inline ml-1" method="POST">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </div>

                    </li>
                    <% } %>
                </ul>
                <form action="/admin" method="GET"><button class="btn btn-dark mt-3">Back</button></form>

            </div>
        </div>
        <!--leave the last column blank-->
        <div class="col-lg-1"></div>
    </div>
</div>