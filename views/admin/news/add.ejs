<%- layout('layouts/template')  %>
<h1 class="text-center mt-3">This is adding news</h1>
<div class="container py-3">
    <div class="row d-flex justify-content-center">
        <div class="col-8">
            <form action="/admin/news/add" method="POST">
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input type="text" name="title" id="title" class="form-control" required><br>
                </div>
                <div class="form-group">
                    <label for="date">Date:</label>
                    <input type="date" name="date" id="date" class="form-control" required><br>
                </div>
                <div class="form-group">
                    <label for="start">From:</label>
                    <input type="time" name="start" id="start"class="form-control" >
                </div>
                <div class="form-group">
                    <label for="end">To:</label>
                    <input type="time" name="end" id="end"class="form-control" >
                </div>
                <div class="form-group">
                    <label for="type">Type of news:</label>
                    <select name="type" id="type"class="form-control" >
                        <option value="Announcement">Announcement</option>
                        <option value="Award">Award</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="logistics">Logistics:</label>
                    <textarea name="logistics" id="logistics" cols="60" rows="20"
                        placeholder="Input HTML Markup or Plain Text (Optional)"class="form-control" >
                    </textarea>
                </div>
                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea name="description" id="description" cols="60" rows="25"
                        placeholder="Input HTML Markup or Plain Text (Optional)" class="form-control">
                    </textarea>
                </div>
                <button class="btn btn-primary">Add news</button>
                <a href="/admin/news/manage" class="btn btn-danger ml-3">Cancel</a>
            </form>
        </div>
    </div>
</div>